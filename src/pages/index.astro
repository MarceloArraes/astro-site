---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import { sanityClient } from "sanity:client";
import type { BlogPost } from "../Sanity";

const fetchProjects = await sanityClient.fetch(
	`*[_type=='blogPost'] | order(_createdAt desc)`,
);

console.log("fetchProjects", fetchProjects);
---

<!-- 
.div2 { grid-area: 1 / 1 / 2 / 2; }
.div3 { grid-area: 1 / 2 / 2 / 3; }
.div4 { grid-area: 1 / 3 / 2 / 4; }
--><!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* @keyframes decoration-slide {
			0% {underl }
			100% {text-decoration-color: var(--black) }
			} */
			h4 {
				background: linear-gradient(currentColor 0 0) bottom
					left/var(--underline-width, 0%) 0.1em no-repeat;
				transition: background-size 0.5s;
			}
			.list-for-posts {
				display: grid;
				grid-template-columns: 1fr 1fr 1fr;
				justify-content: center;
				padding: 10px;
				row-gap: 5px;
				column-gap: 5px;
			}
			.front-page-posts {
				text-decoration: none;
				border: 1px solid black;
				padding: 10px;
				font-size: 20px;
				text-align: center;
			}
			.front-page-posts:hover {
				/* color: red; */
				--underline-width: 100%;
			}
		</style>
	</head>
	<body>
		<Header />

		<main>
			<p>Welcome to my personal open journal</p>
			<p>something</p>
			<p>asdasd: daasdsda</p>
			<ul>
				<li>lemon squeezi</li>
				<li>asdasds <code>codess</code></li>
				<li><code></code></li>
			</ul>
			<p></p>
			<p></p>
			<!-- style="font-family: 'Lugrasimo';" -->
			<div class="flex flex-col gap-y-4">
				<div class="list-for-posts">
					{
						fetchProjects.map((post: BlogPost) => (
							<a
								class="front-page-posts"
								href={`/posts/${post.slug?.current}`}
							>
								<div style="display: flex; flex-direction: column;">
									<h4>{post.title}</h4>
									<p>{post.author}</p>
									<p>
										{new Date(
											post._updatedAt,
										).toLocaleDateString()}
									</p>
								</div>
							</a>
						))
					}
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
