---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";

const dateToday = new Date().toLocaleDateString("en-Au");
console.log("dateToday", dateToday);
---

<header>
	<nav>
		<div class="nav-title">
			<p class="date-today">{dateToday}</p>
			<h1 class="title-header"><a href="/">{SITE_TITLE}</a></h1>
			<img
				class="right-corner-text"
				height="100"
				width="100"
				src="/newtonCraddle.svg"
			/>
		</div>
	</nav>
	<p class="separator"></p>
	<div class="nav-links" style="font-family: Honk;">
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/sanity-blog">Blog</HeaderLink>
		<HeaderLink href="/server-links">Server</HeaderLink>
		<HeaderLink href="/about">About</HeaderLink>
	</div>
</header>

<style>
	@keyframes links-sliding {
		0% {
			transform: translateX(-54dvw);
		}
		100% {
			transform: translateX(54dvw);
		}
	}
	.nav-links {
		display: flex;
		gap: 10px;
		font-size: 30px;
		width: 100%;
		justify-content: center;
		/* transform: translateX(50dvw) */
		/* animation: links-sliding 15s linear infinite */
	}
	.right-corner-text {
		grid-area: 1 / 5 / 2 / 6;
	}
	.date-today {
		grid-area: 1 / 1 / 2 / 2;
	}
	.title-header {
		grid-area: 1 / 3 / 2 / 4;
		text-align: center;
	}
	.nav-title {
		display: grid;
		grid-template-columns: repeat(2, 1fr) 4fr repeat(2, 1fr);
		align-items: center;
		/* grid-template-rows: repeat(5, 1fr); */
		grid-column-gap: 0px;
		grid-row-gap: 0px;
	}
	.separator {
		border: 1px;
		border-color: grey;
		border-width: 4px;
		border-style: solid;
		width: 100%;
	}
	header {
		margin: 0;
		padding: 0 1em;
		/* background: white; */
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	div {
		margin: 0;
	}
	p {
		margin: 0;
		padding: 0;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}
	h1 {
		margin-top: 25px;
		font-family: Impact, Haettenschweiler, "Arial Narrow Bold", sans-serif;
		position: static;
		align-self: center;
	}
	,
	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		width: 100%;
		flex-direction: column;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		/* padding: 1em 0.5em; */
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
